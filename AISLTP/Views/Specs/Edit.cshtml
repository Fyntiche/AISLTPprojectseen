@using AISLTP.Entities
@model Lico
@{

    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <br />
    <fieldset>
        <legend>Лицо</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Fam)
        @Html.HiddenFor(model => model.Ima)
        @Html.HiddenFor(model => model.Otc)

        <div class="display-field">
            <h3>
                @Html.DisplayFor(model => model.Fam)
                @Html.DisplayFor(model => model.Ima)
                @Html.DisplayFor(model => model.Otc)
            </h3>
        </div>

        <div class="editor-label"><b>Специальности:</b></div>
        <br />
        @foreach (Spec c in ViewBag.Specs)
        {
            <input type="checkbox" name="selectedSpecs" value="@c.ID"
                   @(Model.Specs.Contains(c) ? "checked=\"checked\"" : "") />@c.Txt <br />
            }

        <p>
                <br />
            <input type="submit" value="Сохранить" /> @Html.ActionLink("Назад", "Index")
        </p>
    </fieldset>
}