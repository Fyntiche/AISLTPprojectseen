@using AISLTP.Entities
@model Lico
@{

    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <br />
    <fieldset>
        <legend>Лицо</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Fam)
        @Html.HiddenFor(model => model.Ima)
        @Html.HiddenFor(model => model.Otc)

        <div class="display-field">
            <h3>
                @Html.DisplayFor(model => model.Fam)
                @Html.DisplayFor(model => model.Ima)
                @Html.DisplayFor(model => model.Otc)
            </h3>
        </div>

        <div class="editor-label"><b>Профессии</b></div>
        <br />
        @foreach (Prof c in ViewBag.Profs)
        {
            <input type="checkbox" name="selectedProfs" value="@c.ID"
                   @(Model.Profs.Contains(c) ? "checked=\"checked\"" : "") />@c.Txt <br />
            }

        <p>
                <br />
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}